<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="314.0" prefWidth="451.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.operaciones.controler.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label id="textTitulo" text="Suma de números">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <GridPane hgap="10" vgap="10">
        <Label text="Número 1" />
        <TextField fx:id="txtNumero1" GridPane.columnIndex="1" />

        <Label text="Número 2" GridPane.rowIndex="1"/>
        <TextField fx:id="txtNumero2" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Resultado" GridPane.rowIndex="2"/>
        <TextField fx:id="txtResultado" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Sumar" fx:id="btnSumar" onAction="#sumarNumeros"/>
        <Button text="Resetear" fx:id="btnResetear" onAction="#resetearCampos"/>
    </HBox>
</VBox>
